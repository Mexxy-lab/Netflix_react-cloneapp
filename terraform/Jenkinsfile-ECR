// Jenkinsfile to build and push image to Amazon ECR

// Jenkinsfile to build and push image to Amazon ECR

pipeline {
    agent any

    options {
        timeout(time: 15, unit: 'MINUTES')
    }

    environment {
        AWS_REGION = "ap-south-1"
        AWS_ACCESS_KEY_ID     = credentials('pumej_aws_access_id')
        AWS_SECRET_ACCESS_KEY = credentials('pumej_aws_secret_key')
        ECR_NAME = "pumejnetflix"
        registryUrl = "598189530267.dkr.ecr.ap-south-1.amazonaws.com"
        IMAGE_TAG = "v${BUILD_NUMBER}"
    }

    stages {
        stage('SCM Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Mexxy-lab/Netflix_react-cloneapp.git'
            }
        }

        stage('Docker Build') {
            steps {
                sh """
                    echo "üì¶ Building image with tag: ${IMAGE_TAG}"
                    docker build --network=host -t ${registryUrl}/${ECR_NAME}:${IMAGE_TAG} .
                """
            }
        }

        stage('Login to ECR') {
            steps {
                sh """
                    echo "üîë Logging into Amazon ECR..."
                    aws configure set aws_access_key_id ${AWS_ACCESS_KEY_ID}
                    aws configure set aws_secret_access_key ${AWS_SECRET_ACCESS_KEY}
                    aws configure set region ${AWS_REGION}
                    aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${registryUrl}
                """
            }
        }

        stage('Trivy Scan (Aqua)') {
            steps {
                sh """
                    echo "üîç Running Trivy vulnerability scan..."
                    trivy image \
                      --scanners vuln \
                      --severity HIGH,CRITICAL \
                      --timeout 10m \
                      ${registryUrl}/${ECR_NAME}:${IMAGE_TAG}
                """
            }
        }

        stage('Push Docker Image to ECR') {
            steps {
                sh """
                    echo "üöÄ Pushing Docker image to Amazon ECR..."
                    docker push ${registryUrl}/${ECR_NAME}:${IMAGE_TAG}
                """
            }
        }

        stage('Trigger Netflix Deployment Job') {
            steps {
                script {
                    def userChoice = input(
                        message: 'Select the action to perform on Netflix infrastructure:',
                        parameters: [
                            choice(name: 'action', choices: ['apply', 'destroy'], description: 'Choose apply or destroy')
                        ]
                    )

                    build job: 'netflixapp-deployment',
                        wait: true,
                        parameters: [
                            string(name: 'action', value: userChoice),
                            string(name: 'IMAGE_TAG', value: IMAGE_TAG)
                        ]
                }
            }
        }
    }

    post {
        always {
            echo "‚úÖ Build ${BUILD_NUMBER} deployed successfully with image tag ${IMAGE_TAG}!"
        }
    }
}

